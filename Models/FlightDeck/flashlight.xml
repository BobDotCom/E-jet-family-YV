<?xml version="1.0"?>

<PropertyList>
    <animation>
        <name>Flashlight</name>
        <object-name>FlashlightWide</object-name>
        <object-name>FlashlightNarrow</object-name>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Flashlight</object-name>
        <condition>
            <and>
                <property>/sim/current-view/internal</property>
                <property>/controls/lighting/flashlight</property>
            </and>
        </condition>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>Flashlight</object-name>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <property>/sim/current-view/z-offset-m</property>
        <offset-m>13.57</offset-m>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>Flashlight</object-name>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <property>/sim/current-view/x-offset-m</property>
        <offset-m>0.53</offset-m>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>Flashlight</object-name>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
        <property>/sim/current-view/y-offset-m</property>
        <offset-m>-1.405</offset-m>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Flashlight</object-name>
        <center>
            <x-m>-11.57</x-m>
            <y-m>-0.53</y-m>
            <z-m>1.405</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
        <property>/sim/current-view/heading-offset-deg</property>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>Flashlight</object-name>
        <center>
            <x-m>-11.57</x-m>
            <y-m>-0.53</y-m>
            <z-m>1.405</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <property>/sim/current-view/pitch-offset-deg</property>
    </animation>

    <!-- flashlight -->
    <light>
        <type>spot</type>
        <name>FlashlightNarrow</name>
        <position>
            <x-m>-11.57</x-m>
            <y-m>-0.53</y-m>
            <z-m>1.405</z-m>
        </position>
        <direction>
            <heading-deg>0</heading-deg>
            <roll-deg>0</roll-deg>
            <pitch-deg>82</pitch-deg>
        </direction>
        <spot-exponent>1500.0</spot-exponent>
        <spot-cutoff>6</spot-cutoff>
        <range-m>100</range-m>
        <color>
            <r>1.0</r>
            <g>0.9</g>
            <b>0.8</b>
        </color>
        <intensity>200</intensity>

        <ambient>
            <r>1.0</r>
            <g>0.9</g>
            <b>0.8</b>
            <a>1.0</a>
        </ambient>
        <diffuse>
            <r>1.0</r>
            <g>0.9</g>
            <b>0.8</b>
            <a>0.7</a>
        </diffuse>
        <specular>
            <r>1.0</r>
            <g>0.9</g>
            <b>0.8</b>
            <a>0.7</a>
        </specular>
        <attenuation>
            <c>1</c>
            <l>0.01</l>
            <q>0.01</q>
        </attenuation>
    </light>
    <light>
        <type>spot</type>
        <name>FlashlightWide</name>
        <position>
            <x-m>-11.57</x-m>
            <y-m>-0.53</y-m>
            <z-m>1.405</z-m>
        </position>
        <direction>
            <heading-deg>0</heading-deg>
            <roll-deg>0</roll-deg>
            <pitch-deg>82</pitch-deg>
        </direction>
        <spot-exponent>50.0</spot-exponent>
        <spot-cutoff>20</spot-cutoff>
        <range-m>100</range-m>
        <color>
            <r>1.0</r>
            <g>0.9</g>
            <b>0.8</b>
        </color>
        <intensity>5</intensity>

        <ambient>
            <r>1.0</r>
            <g>0.9</g>
            <b>0.8</b>
            <a>1.0</a>
        </ambient>
        <diffuse>
            <r>1.0</r>
            <g>0.9</g>
            <b>0.8</b>
            <a>0.7</a>
        </diffuse>
        <specular>
            <r>1.0</r>
            <g>0.9</g>
            <b>0.8</b>
            <a>0.7</a>
        </specular>
        <attenuation>
            <c>4</c>
            <l>0.01</l>
            <q>0.01</q>
        </attenuation>
    </light>
</PropertyList>
