<PropertyList>
    <path>../../Models/Instruments/Chrono/chronometer.ac</path>

    <effect>
        <name>LCD</name>
        <inherits-from>Models/Effects/lcd</inherits-from>
        <object-name>chrono_screen</object-name>
        <parameters>
            <dirt-factor>0</dirt-factor>
            <brightness>10.0</brightness>
            <threshold>0.01</threshold>
        </parameters>
    </effect>
        
    <animation>
        <type>pick</type>
        <object-name>chrono_screen</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>canvas_chrono.showChrono();</script>
            </binding>
        </action>
    </animation>
    
    <animation>
        <type>pick</type>
        <object-name>et</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/chrono/elapsed_time/reset</property>
                <value type="bool">true</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>instrumentation/chrono/elapsed_time/reset</property>
                    <value type="bool">false</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>chr</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/chrono/chrono/start</property>
                <value type="bool">true</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>instrumentation/chrono/chrono/start</property>
                    <value type="bool">false</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>rst</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/chrono/chrono/reset</property>
                <value type="bool">true</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>instrumentation/chrono/chrono/reset</property>
                    <value type="bool">false</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    
    <animation> 
        <type>material</type> 
        <object-name>chrono_screen</object-name>
        <property-base>instrumentation/IESS/</property-base>
        <emission>
            <red>0.9</red>
            <green>1.0</green>
            <blue>1.0</blue>
            <factor-prop>brightness</factor-prop>
        </emission>
    </animation>
    
</PropertyList>
