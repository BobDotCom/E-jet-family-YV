    <light>
        <type>spot</type>
        <name>cone right</name>
        <position>
            <x-m>0</x-m>
            <y-m>1.1</y-m>
            <z-m>0</z-m>
        </position>
        <direction>
            <heading-deg>0</heading-deg>
            <roll-deg>0</roll-deg>
            <pitch-deg>70</pitch-deg>
        </direction>
        <ambient>
            <r>1.0</r>
            <g>1.0</g>
            <b>1.0</b>
