        <far-m>200</far-m>
    </light>
    <light>
        <type>spot</type>
        <name>BeaconCone</name>
        <position>
            <x-m>1.3</x-m>
            <y-m>0</y-m>
            <z-m>2.2</z-m>
        </position>
        <direction>
            <heading-deg>180</heading-deg>
            <roll-deg>0</roll-deg>
            <pitch-deg>90</pitch-deg>
        </direction>
        <ambient>
            <r>1.0</r>
            <g>0.2</g>
            <b>0.1</b>
            <a>1.0</a>
        </ambient>
        <diffuse>
            <r>1.0</r>
            <g>0.2</g>
            <b>0.1</b>
            <a>0.7</a>
        </diffuse>
        <specular>
            <r>1.0</r>
            <g>0.2</g>
            <b>0.1</b>
            <a>0.7</a>
        </specular>
        <attenuation>
            <c>1</c>
            <l>0.0</l>
            <q>0.1</q>
