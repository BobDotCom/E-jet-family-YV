        <spot-cutoff>60.0</spot-cutoff>
        <range-m>100</range-m>
        <near-m>0.1</near-m>
        <far-m>100</far-m>
    </light>

    <animation>
        <type>spin</type>
        <object-name>BeaconCone</object-name>
        <property>services/fuel-truck/beacon</property>
        <factor>-30</factor>
        <center>
            <x-m>1.5</x-m>
            <y-m>0</y-m>
            <z-m>2.2</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>
    
