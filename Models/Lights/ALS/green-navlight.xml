<?xml version="1.0"?>
<PropertyList>

 <path>green-navlight.ac</path>
 <nopreview/>



 <effect>
   <inherits-from>Aircraft/E-jet-family/Models/Lights/ALS/green-navlight</inherits-from>
   <object-name>green-navlight</object-name>
 </effect>
 
 <animation>
  <type>scale</type>
  <x-offset>0.15</x-offset>
  <y-offset>0.15</y-offset>
  <z-offset>0.15</z-offset>
 </animation>
 
<animation>
  <type>dist-scale</type>
  <object-name>green-navlight</object-name>
  <interpolation>
   <entry>
    <ind>0</ind>
    <dep>1</dep>
   </entry>
   <entry>
    <ind>300</ind>
    <dep>4</dep>
   </entry>
   <entry>
    <ind>1500</ind>
    <dep>8</dep>
   </entry>
  </interpolation>
 </animation>

    <light>
        <type>spot</type>
        <name>Spotlight</name>
        <position>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </position>
        <direction>
            <heading-deg>-55</heading-deg>
            <roll-deg>0</roll-deg>
            <pitch-deg>90</pitch-deg>
        </direction>
        <ambient>
            <r>0.1</r>
            <g>1.0</g>
            <b>0.1</b>
            <a>1.0</a>
        </ambient>
        <diffuse>
            <r>0.1</r>
            <g>1.0</g>
            <b>0.1</b>
            <a>0.7</a>
        </diffuse>
        <specular>
            <r>0.1</r>
            <g>1.0</g>
            <b>0.1</b>
            <a>0.7</a>
        </specular>
        <dim-factor>
            <property>systems/electrical/outputs/nav-lights-norm</property>
            <factor>1</factor>
            <offset>0</offset>
            <min>0</min>
            <max>1</max>
        </dim-factor>
        <attenuation>
            <c>1.0</c>
            <l>0.0</l>
            <q>0.1</q>
        </attenuation>
        <spot-exponent>10.0</spot-exponent>
        <spot-cutoff>55.0</spot-cutoff>
        <range-m>50</range-m>
        <near-m>0.02</near-m>
        <far-m>50</far-m>
    </light>

</PropertyList>
