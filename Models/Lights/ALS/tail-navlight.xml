<?xml version="1.0"?>
<PropertyList>
    
    <path>tail-navlight.ac</path>
    <nopreview/>
    
    
    <effect>
        <inherits-from>Aircraft/Cessna-208-Caravan/Models/Lights/ALS/tail-navlight</inherits-from>
        <object-name>tail-navlight</object-name>
    </effect>
    
    <effect>
        <inherits-from>Aircraft/Cessna-208-Caravan/Models/Lights/ALS/tail-navlight2</inherits-from>
        <object-name>tail-navlight.001</object-name>
    </effect>
    
    <animation>
        <type>scale</type>
        <x-offset>0.1</x-offset>
        <y-offset>0.1</y-offset>
        <z-offset>0.1</z-offset>
    </animation>
    
    <animation>
        <type>translate</type>
        <object-name>tail-navlight</object-name>
        <object-name>tail-navlight.001</object-name>
        <offset-m>0.5</offset-m><!--translate-offset-m * scale-x-offset = real-offset in sim, so 0.1 * 0.5m =0.05m = 5cm--> 
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    
    <animation>
        <type>dist-scale</type>
        <object-name>tail-navlight</object-name>
        <object-name>tail-navlight.001</object-name>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>1</dep>
            </entry>
            <entry>
                <ind>300</ind>
                <dep>4</dep>
            </entry>
            <entry>
                <ind>1500</ind>
                <dep>8</dep>
            </entry>
        </interpolation>
    </animation>
    
    <light>
        <type>spot</type>
        <name>Spotlight</name>
        <position>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </position>
        <direction>
            <heading-deg>180</heading-deg>
            <roll-deg>0</roll-deg>
            <pitch-deg>90</pitch-deg>
        </direction>
        <ambient>
            <r>1.0</r>
            <g>1.0</g>
            <b>1.0</b>
            <a>1.0</a>
        </ambient>
        <diffuse>
            <r>1.0</r>
            <g>1.0</g>
            <b>1.0</b>
            <a>0.7</a>
        </diffuse>
        <specular>
            <r>1.0</r>
            <g>1.0</g>
            <b>1.0</b>
            <a>0.7</a>
        </specular>
        <dim-factor>
            <property>systems/electrical/outputs/nav-lights-norm</property>
            <factor>1</factor>
            <offset>0</offset>
            <min>0</min>
            <max>1</max>
        </dim-factor>
        <attenuation>
            <c>1.0</c>
            <l>0.0</l>
            <q>0.1</q>
        </attenuation>
        <spot-exponent>8.0</spot-exponent>
        <spot-cutoff>70.0</spot-cutoff>
        <range-m>50</range-m>
        <near-m>0.02</near-m>
        <far-m>50</far-m>
        <color>
            <r>1.0</r>
            <g>1.0</g>
            <b>1.0</b>
        </color>
        <intensity>
            <expression>
                <product>
                    <property>systems/electrical/outputs/nav-lights-norm</property>
                    <value>2000</value>
                </product>
            </expression>
        </intensity>
    </light>
    
    
</PropertyList>
