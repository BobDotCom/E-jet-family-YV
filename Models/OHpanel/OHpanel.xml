<?xml version = '1.0' encoding = 'UTF-8' ?>
<PropertyList>
    <model>
        <name>OHPanelALS</name>
        <path>OHpanel-als.xml</path>
    </model>
    <model>
        <name>OHPanelPBR</name>
        <path>OHpanel-pbr.xml</path>
    </model>

    <animation>
        <type>select</type>
        <object-name>OHPanelPBR</object-name>
        <condition>
            <equals>
                <property>/sim/rendering/default-compositor</property>
                <value>/Compositor/HDR/hdr</value>
            </equals>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>OHPanelALS</object-name>
        <condition>
            <not-equals>
                <property>/sim/rendering/default-compositor</property>
                <value>/Compositor/HDR/hdr</value>
            </not-equals>
        </condition>
    </animation>
</PropertyList>
