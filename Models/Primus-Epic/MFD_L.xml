<?xml version = '1.0' encoding = 'UTF-8' ?>
<PropertyList>

    <path>../../Models/Primus-Epic/primus_epic_mfd0.ac</path>

    <!-- Power on/off -->
    <animation>
        <name>Power on/off</name>
        <type>select</type>
        <object-name>off</object-name>
        <condition>
            <less-than>
                <property>systems/electrical/outputs/mfd[0]</property>
                <value>15</value>
            </less-than>
        </condition>
    </animation>

    <animation>
        <type>touch</type>
        <object-name>MFD0</object-name>
        <action>
            <touch>0</touch>
            <repeatable>false</repeatable>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[0];
                    if (mfd != nil) {
                        mfd.touch(cmdarg().getValues());
                    }
                ]]></script>
            </binding>
        </action>
    </animation>

    <effect>
        <name>LCD</name>
        <inherits-from>Models/Effects/lcd</inherits-from>
        <object-name>MFD0</object-name>
        <parameters>
            <gamma>0.4</gamma>
        </parameters>
    </effect>

    <animation>
        <type>knob</type>
        <object-name>MFD0_frame</object-name>
        <decrease>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[0];
                    if (mfd != nil) {
                        mfd.scroll(-1, 0);
                    }
                ]]></script>
            </binding>
        </decrease>
        <increase>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[0];
                    if (mfd != nil) {
                        mfd.scroll(1, 0);
                    }
                ]]></script>
            </binding>
        </increase>
        <shift-decrease>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[0];
                    if (mfd != nil) {
                        mfd.scroll(-1, 1);
                    }
                ]]></script>
            </binding>
        </shift-decrease>
        <shift-increase>
            <binding>
                <condition>
                    <property>/options/controls/ccd-emulation</property>
                </condition>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[0];
                    if (mfd != nil) {
                        mfd.scroll(1, 1);
                    }
                ]]></script>
            </binding>
        </shift-increase>
    </animation>

</PropertyList>
