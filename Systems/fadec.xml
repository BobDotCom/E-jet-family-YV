<PropertyList>
    <!-- LEFT ENGINE -->
    <logic>
        <output>/controls/engines/engine[0]/starter</output>
        <input>
            <and>
                <property>/controls/engines/engine[0]/starter-switch</property>
                <or>
                    <!-- we need bleed air from either the APU, the GPU, or the opposite engine -->
                    <and>
                        <property>/engines/apu/running</property>
                        <property>/controls/pneumatic/APU-bleed</property>
                    </and>
                    <and>
                        <property>/engines/engine[1]/running</property>
                        <property>/controls/pneumatic/engine[1]/bleed</property>
                    </and>
                    <!-- GPU bleed is unswitched and assumed unlimited -->
                    <property>/controls/electric/external-power-connected</property>
                </or>
                <!-- Starter control valve must be powered -->
                <!-- TODO -->
            </and>
        </input>
    </logic>
    <filter>
        <name>Starter Left</name>
        <type>gain</type>
        <gain>1</gain>
        <input>
            <condition>
                <equals>
                    <property>fadec/engine-switch[0]</property>
                    <value>2</value>
                </equals>
            </condition>
            <value>1</value>
        </input>
        <input>
            <value>0</value>
        </input>
        <output>controls/engines/engine[0]/starter-switch</output>
    </filter>

    <filter>
        <name>Spring-load engine switch Left</name>
        <type>gain</type>
        <debug type="bool">true</debug>
        <gain>1</gain>
        <enable>
            <condition>
                <and>
                    <equals>
                        <property>fadec/engine-switch[0]</property>
                        <value>2</value>
                    </equals>
                    <greater-than>
                        <property>engines/engine[0]/n1</property>
                        <property>fadec/configuration/idle-n1</property>
                    </greater-than>
                </and>
            </condition>
        </enable>
        <input>
            <value>1</value>
        </input>
        <output>fadec/engine-switch[0]</output>
    </filter>

    <logic>
        <name>Ignition Left</name>
        <input>
            <and>
                <or>
                    <greater-than>
                        <property>/systems/electrical/outputs/exciter[0]</property>
                        <value>110</value>
                    </greater-than>
                    <greater-than>
                        <property>/systems/electrical/outputs/exciter[2]</property>
                        <value>110</value>
                    </greater-than>
                </or>
                <or>
                    <!-- ignition switch in "OVRD" position -->
                    <equals>
                        <property>/fadec/ignition-switch[0]</property>
                        <value>2</value>
                    </equals>
                    <!-- ignition switch in "AUTO" position and starter switch in "START" position -->
                    <and>
                        <equals>
                            <property>/fadec/ignition-switch[0]</property>
                            <value>1</value>
                        </equals>
                        <equals>
                            <property>/fadec/engine-switch[0]</property>
                            <value>2</value>
                        </equals>
                    </and>
                </or>
            </and>
        </input>
        <output>/fadec/ignition[0]</output>
    </logic>

    <filter>
        <name>Cutoff Left</name>
        <type>gain</type>
        <gain>1</gain>
        <input>
            <condition>
                <equals>
                    <property>/fadec/engine-switch[0]</property>
                    <value>0</value>
                </equals>
            </condition>
            <value>1</value>
        </input>
        <input>
            <condition>
                <and>
                    <!-- introduce fuel when N2 >= 20% -->
                    <greater-than>
                        <property>/engines/engine[0]/n2</property>
                        <value>20</value>
                    </greater-than>
                    <or>
                        <!-- ...provided ignition is available -->
                        <property>/fadec/ignition[0]</property>
                        <!-- ...or engine is running stable -->
                        <greater-than>
                            <property>/engines/engine[0]/n2</property>
                            <value>50</value>
                        </greater-than>
                    </or>
                </and>
            </condition>
            <value>0</value>
        </input>
        <input>
            <value>1</value>
        </input>
        <output>controls/engines/engine[0]/cutoff-switch</output>
    </filter>

    <filter>
        <name>Target Left</name>
        <type>gain</type>
        <gain>1</gain>
        <!-- Starter active: select 0.1% above idle to keep the juices flowing -->
        <input>
            <condition>
                <property>controls/engines/engine[0]/starter-switch</property>
            </condition>
            <expression>
                <sum>
                    <property>fadec/configuration/idle-n1</property>
                    <value>0.1</value>
                </sum>
            </expression>
        </input>
        <!-- TOGA RES mode: interpolate between TOGA and MAX N1 -->
        <input>
            <condition>
                <greater-than>
                    <property>controls/engines/engine[0]/throttle</property>
                    <property>fadec/configuration/throttle-toga-reserve</property>
                </greater-than>
            </condition>
            <expression>
                <sum>
                    <property>trs/thrust/to</property>
                    <product>
                        <div>
                            <difference>
                                <property>controls/engines/engine[0]/throttle</property>
                                <property>fadec/configuration/throttle-toga-reserve</property>
                            </difference>
                            <difference>
                                <value>1</value>
                                <property>fadec/configuration/throttle-toga-reserve</property>
                            </difference>
                        </div>
                        <difference>
                            <property>fadec/configuration/max-n1</property>
                            <property>trs/thrust/to</property>
                        </difference>
                    </product>
                </sum>
            </expression>
        </input>
        <!-- TOGA mode: select exact TOGA thrust, as per TRS -->
        <input>
            <condition>
                <greater-than>
                    <property>controls/engines/engine[0]/throttle</property>
                    <property>fadec/configuration/throttle-toga-norm</property>
                </greater-than>
            </condition>
            <expression>
                <min>
                    <property>trs/thrust/to</property>
                    <property>fadec/trs-limit</property>
                </min>
            </expression>
        </input>
        <!-- Normal mode: interpolate thrust between idle and TOGA. -->
        <input>
            <expression>
                <min>
                    <sum>
                        <property>fadec/configuration/idle-n1</property>
                        <product>
                            <div>
                                <property>controls/engines/engine[0]/throttle</property>
                                <property>fadec/configuration/throttle-toga-norm</property>
                            </div>
                            <difference>
                                <property>fadec/configuration/max-n1</property>
                                <property>fadec/configuration/idle-n1</property>
                            </difference>
                        </product>
                    </sum>
                    <property>fadec/trs-limit</property>
                </min>
            </expression>
        </input>
        <output>/fadec/target[0]</output>
    </filter>

    <filter>
        <name>Throttle Left</name>
        <type>gain</type>
        <gain>1</gain>
        <input>
            <expression>
                <div>
                    <difference>
                        <property>/fadec/target[0]</property>
                        <property>fadec/configuration/idle-n1</property>
                    </difference>
                    <difference>
                        <property>fadec/configuration/max-n1</property>
                        <property>fadec/configuration/idle-n1</property>
                    </difference>
                </div>
            </expression>
        </input>
        <output>fadec/throttle-cmd[0]</output>
    </filter>

    <!-- RIGHT ENGINE -->
    <logic>
        <output>/controls/engines/engine[1]/starter</output>
        <input>
            <and>
                <property>/controls/engines/engine[1]/starter-switch</property>
                <or>
                    <!-- we need bleed air from either the APU, the GPU, or the opposite engine -->
                    <and>
                        <property>/engines/apu/running</property>
                        <property>/controls/pneumatic/APU-bleed</property>
                    </and>
                    <and>
                        <property>/engines/engine[0]/running</property>
                        <property>/controls/pneumatic/engine[0]/bleed</property>
                    </and>
                    <!-- GPU bleed is unswitched and assumed unlimited -->
                    <property>/controls/electric/external-power-connected</property>
                </or>
                <!-- Starter control valve must be powered -->
                <!-- TODO -->
            </and>
        </input>
    </logic>
    <filter>
        <name>Starter Right</name>
        <type>gain</type>
        <gain>1</gain>
        <input>
            <condition>
                <equals>
                    <property>fadec/engine-switch[1]</property>
                    <value>2</value>
                </equals>
            </condition>
            <value>1</value>
        </input>
        <input>
            <value>0</value>
        </input>
        <output>controls/engines/engine[1]/starter-switch</output>
    </filter>

    <filter>
        <name>Spring-load engine switch Right</name>
        <type>gain</type>
        <debug type="bool">true</debug>
        <gain>1</gain>
        <enable>
            <condition>
                <and>
                    <equals>
                        <property>fadec/engine-switch[1]</property>
                        <value>2</value>
                    </equals>
                    <greater-than>
                        <property>engines/engine[1]/n1</property>
                        <property>fadec/configuration/idle-n1</property>
                    </greater-than>
                </and>
            </condition>
        </enable>
        <input>
            <value>1</value>
        </input>
        <output>fadec/engine-switch[1]</output>
    </filter>

    <logic>
        <name>Ignition Right</name>
        <input>
            <and>
                <or>
                    <greater-than>
                        <property>/systems/electrical/outputs/exciter[1]</property>
                        <value>110</value>
                    </greater-than>
                    <greater-than>
                        <property>/systems/electrical/outputs/exciter[3]</property>
                        <value>110</value>
                    </greater-than>
                </or>
                <or>
                    <!-- ignition switch in "OVRD" position -->
                    <equals>
                        <property>/fadec/ignition-switch[1]</property>
                        <value>2</value>
                    </equals>
                    <!-- ignition switch in "AUTO" position and starter switch in "START" position -->
                    <and>
                        <equals>
                            <property>/fadec/ignition-switch[1]</property>
                            <value>1</value>
                        </equals>
                        <equals>
                            <property>/fadec/engine-switch[1]</property>
                            <value>2</value>
                        </equals>
                    </and>
                </or>
            </and>
        </input>
        <output>/fadec/ignition[1]</output>
    </logic>

    <filter>
        <name>Cutoff Right</name>
        <type>gain</type>
        <gain>1</gain>
        <input>
            <condition>
                <equals>
                    <property>/fadec/engine-switch[1]</property>
                    <value>0</value>
                </equals>
            </condition>
            <value>1</value>
        </input>
        <input>
            <condition>
                <and>
                    <!-- introduce fuel when N2 >= 20% -->
                    <greater-than>
                        <property>/engines/engine[1]/n2</property>
                        <value>20</value>
                    </greater-than>
                    <or>
                        <!-- ...provided ignition is available -->
                        <property>/fadec/ignition[1]</property>
                        <!-- ...or engine is running stable -->
                        <greater-than>
                            <property>/engines/engine[1]/n2</property>
                            <value>50</value>
                        </greater-than>
                    </or>
                </and>
            </condition>
            <value>0</value>
        </input>
        <input>
            <value>1</value>
        </input>
        <output>controls/engines/engine[1]/cutoff-switch</output>
    </filter>


    <filter>
        <name>Target Right</name>
        <type>gain</type>
        <gain>1</gain>
        <!-- Starter active: select 0.1% above idle to keep the juices flowing -->
        <input>
            <condition>
                <property>controls/engines/engine[1]/starter-switch</property>
            </condition>
            <expression>
                <sum>
                    <property>fadec/configuration/idle-n1</property>
                    <value>0.1</value>
                </sum>
            </expression>
        </input>
        <!-- TOGA RES mode: interpolate between TOGA and MAX N1 -->
        <input>
            <condition>
                <greater-than>
                    <property>controls/engines/engine[1]/throttle</property>
                    <property>fadec/configuration/throttle-toga-reserve</property>
                </greater-than>
            </condition>
            <expression>
                <sum>
                    <property>trs/thrust/to</property>
                    <product>
                        <div>
                            <difference>
                                <property>controls/engines/engine[1]/throttle</property>
                                <property>fadec/configuration/throttle-toga-reserve</property>
                            </difference>
                            <difference>
                                <value>1</value>
                                <property>fadec/configuration/throttle-toga-reserve</property>
                            </difference>
                        </div>
                        <difference>
                            <property>fadec/configuration/max-n1</property>
                            <property>trs/thrust/to</property>
                        </difference>
                    </product>
                </sum>
            </expression>
        </input>
        <!-- TOGA mode: select exact TOGA thrust, as per TRS -->
        <input>
            <condition>
                <greater-than>
                    <property>controls/engines/engine[1]/throttle</property>
                    <property>fadec/configuration/throttle-toga-norm</property>
                </greater-than>
            </condition>
            <expression>
                <min>
                    <property>trs/thrust/to</property>
                    <property>fadec/trs-limit</property>
                </min>
            </expression>
        </input>
        <!-- Normal mode: interpolate thrust between idle and TOGA. -->
        <input>
            <expression>
                <min>
                    <sum>
                        <property>fadec/configuration/idle-n1</property>
                        <product>
                            <div>
                                <property>controls/engines/engine[1]/throttle</property>
                                <property>fadec/configuration/throttle-toga-norm</property>
                            </div>
                            <difference>
                                <property>fadec/configuration/max-n1</property>
                                <property>fadec/configuration/idle-n1</property>
                            </difference>
                        </product>
                    </sum>
                    <property>fadec/trs-limit</property>
                </min>
            </expression>
        </input>
        <output>/fadec/target[1]</output>
    </filter>

    <filter>
        <name>Throttle Right</name>
        <type>gain</type>
        <gain>1</gain>
        <input>
            <expression>
                <div>
                    <difference>
                        <property>/fadec/target[1]</property>
                        <property>fadec/configuration/idle-n1</property>
                    </difference>
                    <difference>
                        <property>fadec/configuration/max-n1</property>
                        <property>fadec/configuration/idle-n1</property>
                    </difference>
                </div>
            </expression>
        </input>
        <output>fadec/throttle-cmd[1]</output>
    </filter>

    <!-- REVERSERS -->
    <filter>
        <name>Reverser Left</name>
        <type>noise-spike</type>
        <max-rate-of-change>0.715</max-rate-of-change>
        <input>
            <condition>
                <not>
                    <or>
                        <property>/gear/gear[1]/wow</property>
                        <property>/gear/gear[2]/wow</property>
                    </or>
                </not>
            </condition>
            <value>0</value>
        </input>
        <input>
            <property>/controls/engines/engine[0]/reverser</property>
        </input>
        <output>/engines/engine[0]/reverser-pos-norm</output>
    </filter>
    <filter>
        <name>Reverser Left To JSB</name>
        <type>gain</type>
        <gain>1.7</gain>
        <input>/controls/engines/engine[0]/reverser</input>
        <output>/fdm/jsbsim/propulsion/engine[0]/reverser-angle-rad</output>
    </filter>
    <filter>
        <name>Reverser Right</name>
        <type>noise-spike</type>
        <max-rate-of-change>0.715</max-rate-of-change>
        <input>
            <condition>
                <not>
                    <or>
                        <property>/gear/gear[1]/wow</property>
                        <property>/gear/gear[2]/wow</property>
                    </or>
                </not>
            </condition>
            <value>0</value>
        </input>
        <input>
            <property>/controls/engines/engine[1]/reverser</property>
        </input>
        <output>/engines/engine[1]/reverser-pos-norm</output>
    </filter>
    <filter>
        <name>Reverser Right To JSB</name>
        <type>gain</type>
        <gain>1.7</gain>
        <input>/controls/engines/engine[1]/reverser</input>
        <output>/fdm/jsbsim/propulsion/engine[1]/reverser-angle-rad</output>
    </filter>

</PropertyList>
