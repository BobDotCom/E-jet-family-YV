<?xml version="1.0"?>
<PropertyList>
    <name>performance</name>
	<layout>vbox</layout>
	<pref-width>600</pref-width>

    <group>
        <layout>hbox</layout>
		<empty>
			<stretch>1</stretch>
		</empty>

        <text>
            <label>Performance</label>
        </text>

		<empty>
			<stretch>1</stretch>
		</empty>

		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend></legend>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
    </group>

    <hrule/>

    <group>
        <layout>hbox</layout>

        <group>
            <layout>vbox</layout>
            <halign>center</halign>
            <valign>top</valign>

            <text>
                <label>Speed References</label>
            </text>
            <text>
                <label>Takeoff</label>
            </text>
            <group>
                <layout>hbox</layout>
                <text>
                    <label>V1</label>
                    <pref-width>30</pref-width>
                </text>
                <input>
                    <property>/controls/flight/v1</property>
                    <label>KIAS</label>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </input>
            </group>
            <group>
                <layout>hbox</layout>
                <text>
                    <label>Vr</label>
                    <pref-width>30</pref-width>
                </text>
                <input>
                    <property>/controls/flight/vr</property>
                    <label>KIAS</label>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </input>
            </group>
            <group>
                <layout>hbox</layout>
                <text>
                    <label>V2</label>
                    <pref-width>30</pref-width>
                </text>
                <input>
                    <property>/controls/flight/v2</property>
                    <label>KIAS</label>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </input>
            </group>
            <group>
                <layout>hbox</layout>
                <text>
                    <label>Vfs</label>
                    <pref-width>30</pref-width>
                </text>
                <input>
                    <property>/controls/flight/vfs</property>
                    <label>KIAS</label>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </input>
            </group>
            <text>
                <label>Approach</label>
            </text>
            <group>
                <layout>hbox</layout>
                <text>
                    <label>Vref</label>
                    <pref-width>30</pref-width>
                </text>
                <input>
                    <property>/controls/flight/vref</property>
                    <label>KIAS</label>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </input>
            </group>
            <group>
                <layout>hbox</layout>
                <text>
                    <label>Vappr</label>
                    <pref-width>30</pref-width>
                </text>
                <input>
                    <property>/controls/flight/vappr</property>
                    <label>KIAS</label>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </input>
            </group>
            <group>
                <layout>hbox</layout>
                <text>
                    <label>Vac</label>
                    <pref-width>30</pref-width>
                </text>
                <input>
                    <property>/controls/flight/vac</property>
                    <label>KIAS</label>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </input>
            </group>

        </group>
        <group>
            <layout>vbox</layout>
            <halign>center</halign>
            <valign>top</valign>
            <text>
                <label>Thrust Ratings</label>
            </text>
            <group>
                <layout>hbox</layout>
                <text>
                    <label>TO-</label>
                </text>
                <select>
                    <property>/controls/flight/trs/to</property>
                    <value>1</value>
                    <value>2</value>
                    <value>3</value>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </select>
            </group>
            <group>
                <layout>hbox</layout>
                <checkbox>
                    <label>Flex T/O</label>
                    <property>/controls/flight/trs/flex-to</property>
                    <halign>left</halign>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </checkbox>
            </group>
            <group>
                <text>
                    <label>TRS mode</label>
                </text>
                <layout>vbox</layout>
                <combo>
                    <pref-width>200</pref-width>
                    <pref-height>130</pref-height>
                    <property>/controls/flight/trs/mode</property>
                    <value>AUTO</value>
                    <value>TO</value>
                    <value>GA</value>
                    <value>CLB</value>
                    <value>CRZ</value>
                    <value>CON</value>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </combo>
            </group>
        </group>

    </group>

</PropertyList>

