        </input>
        <output>instrumentation/pfd[0]/alt-bug-diff</output>
    </filter>
    <filter>
        <name>SPEEDBUGDiff1</name>
        <type>gain</type>
        <gain>1.0</gain>
        <input>
            <expression>
                <dif>
                    <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property> 
