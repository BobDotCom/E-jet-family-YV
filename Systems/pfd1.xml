            <property>/instrumentation/pfd[0]/nav-src</property>
        </input>
        <input>
            <condition>
                <property>/instrumentation/pfd[0]/preview</property>
            </condition>
            <property>/instrumentation/pfd[0]/preview</property>
        </input>
