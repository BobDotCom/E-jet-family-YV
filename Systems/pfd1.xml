                    </entry>
                    <entry>
                        <ind>0</ind><dep>0</dep>
                    </entry>
                    <entry>
                        <ind>1000</ind><dep>40.09</dep>
                    </entry>
                    <entry>
                        <ind>2000</ind><dep>49.31</dep>
                    </entry>
