    <filter>
        <name>Diamond Bearing Visible</name>
        <type>gain</type>
        <gain>1</gain>
        <period>
            <min>0</min>
            <max>360</max>
        </period>
        <input>
            <condition>
                <equals>
                    <property>instrumentation/pfd[0]/bearing[1]/source</property>
                    <value>1</value>
                </equals>
            </condition>
            <property>instrumentation/nav[1]/in-range</property>
        </input>
        <input>
            <condition>
                <equals>
                    <property>instrumentation/pfd[0]/bearing[1]/source</property>
                    <value>2</value>
                </equals>
            </condition>
            <property>instrumentation/adf[1]/in-range</property>
