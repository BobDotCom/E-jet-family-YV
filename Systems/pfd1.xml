<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <!-- ALTITUDE PREDICTOR -->
    
    <predict-simple>
        <name>altitude predictor</name>
        <update-interval-secs type="double">0.1</update-interval-secs>
        <input>instrumentation/altimeter/indicated-altitude-ft</input>
        <output>instrumentation/pfd[0]/alt-lookahead-6s</output>
        <seconds>6.0</seconds>
        <filter-gain>0.05</filter-gain>
    </predict-simple>
    
    <predict-simple>
        <name>airspeed predictor</name>
        <update-interval-secs type="double">0.1</update-interval-secs>
        <input>instrumentation/airspeed-indicator/indicated-speed-kt</input>
        <output>instrumentation/pfd[0]/airspeed-lookahead-10s</output>
        <seconds>10.0</seconds>
        <filter-gain>0.0</filter-gain>
    </predict-simple>
    
    <filter>
        <name>ALT preprocessor (alt trend up)</name>
        <type>gain</type>
        <update-interval-secs type="double">0.1</update-interval-secs>
        <input>
            <property>instrumentation/pfd[0]/alt-lookahead-6s</property>
        </input>
        <reference>
            <property>instrumentation/altimeter/indicated-altitude-ft</property>
            <offset>500</offset>
        </reference>
        <gain>-0.000480</gain>
        <output>instrumentation/pfd[0]/alt-trend-up</output>
        <max>0.24</max>
        <min>0</min>
    </filter>
    
    <filter>
        <name>ALT preprocessor (alt trend down)</name>
        <type>gain</type>
        <update-interval-secs type="double">0.1</update-interval-secs>
        <input>
            <property>instrumentation/pfd[0]/alt-lookahead-6s</property>
            <min>0</min>
        </input>
        <reference>
            <property>instrumentation/altimeter/indicated-altitude-ft</property>
            <offset>-500</offset>
        </reference>
        <gain>-0.000480</gain>
        <output>instrumentation/pfd[0]/alt-trend-down</output>
        <min>-0.24</min>
        <max>0</max>
    </filter>
    
    
    <!-- ALTITUDE CURSOR -->
    
    <filter>
        <name>Altitude cursor</name> 
        <type>gain</type>
        <update-interval-secs type="double">0.05</update-interval-secs>
        <gain>1.0</gain>
        <input>
            <condition>
                <not-equals>
                    <property>autopilot/locks/altitude</property>
                    <value>VALT</value>
                </not-equals>
            </condition>
            <property>autopilot/settings/asel</property>
            <scale>100</scale>
        </input>
        <input>
            <condition>
                <equals>
                    <property>autopilot/locks/altitude</property>
                    <value>VALT</value>
                </equals>
            </condition>
            <property>autopilot/settings/target-altitude-ft</property>
        </input>
        <reference>
            <property>instrumentation/altimeter/indicated-altitude-ft</property>
        </reference>
        <output>instrumentation/pfd[0]/target-altitude-diff</output>
        <min>-800</min>
        <max>800</max>
    </filter>
    
    <!-- MINIMUMS -->
    
    <!-- mk-viii does not support actual baro minimums, so we provide fake
         radio minimums based on configured baro minimums, current barometric
         altitude, and current radar altimeter reading. -->
    <filter>
        <name>Fake baro minimums</name>
        <type>gain</type>
        <gain>1</gain>
        <input>
            <expression>
                <dif>
                    <property>/instrumentation/pfd[0]/minimums-baro</property>
                    <dif>
                        <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                        <property>/position/gear-agl-ft</property>
                    </dif>
                </dif>
            </expression>
        </input>
        <output>/instrumentation/pfd[0]/minimums-fake-baro</output>
    </filter>
    
    <!-- forward either fake-baro or radio minimums to mk-viii -->
    <filter>
        <name>Forward minimums</name>
        <type>gain</type>
        <gain>1</gain>
        <enable>
            <condition>
                <equals>
                    <property>controls/flight/nav-src/side</property>
                    <value>0</value>
                </equals>
            </condition>
        </enable>
        <input>
            <condition>
                <equals>
                    <property>/instrumentation/pfd[0]/minimums-mode</property>
                    <value>0</value>
                </equals>
            </condition>
            <property>/instrumentation/pfd[0]/minimums-radio</property>
        </input>
        <input>
            <condition>
                <equals>
                    <property>/instrumentation/pfd[0]/minimums-mode</property>
                    <value>1</value>
                </equals>
            </condition>
            <property>/instrumentation/pfd[0]/minimums-fake-baro</property>
        </input>
        <output>/instrumentation/mk-viii/inputs/arinc429/decision-height</output>
    </filter>

    <filter>
        <type>derivative</type>
        <input>
            <property>/instrumentation/pfd[0]/minimums-radio</property>
        </input>
        <output>/instrumentation/pfd[0]/minimums-radio-rate</output>
        <filter-time>1.0</filter-time>
    </filter>

    <filter>
        <type>derivative</type>
        <input>
            <property>/instrumentation/pfd[0]/minimums-baro</property>
        </input>
        <output>/instrumentation/pfd[0]/minimums-baro-rate</output>
        <filter-time>1.0</filter-time>
    </filter>

    <filter>
        <type>derivative</type>
        <input>
            <property>/instrumentation/pfd[0]/minimums-mode</property>
        </input>
        <output>/instrumentation/pfd[0]/minimums-mode-rate</output>
        <filter-time>1.0</filter-time>
    </filter>

    <logic>
        <input>
            <or>
                <property>/instrumentation/pfd[0]/minimums-radio-rate</property>
                <property>/instrumentation/pfd[0]/minimums-baro-rate</property>
                <property>/instrumentation/pfd[0]/minimums-mode-rate</property>
            </or>
        </input>
        <output>/instrumentation/pfd[0]/minimums-delta</output>
    </logic>

    <flipflop>
        <name>Minimums changed</name>
        <type>monostable</type>
        <debug type="bool">false</debug>
        <time>
            <value>20</value>
        </time>
        <S>
            <property>/instrumentation/pfd[0]/minimums-delta</property>
        </S>
        <output>/instrumentation/pfd[0]/minimums-visible</output>
    </flipflop>
    
