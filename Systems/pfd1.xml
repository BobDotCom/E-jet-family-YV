        <input>
            <condition>
                <equals>
                    <property>/instrumentation/pfd[0]/ils/source</property>
                    <value>1</value>
                </equals>
            </condition>
            <property>/instrumentation/nav[1]/has-gs</property>
        </input>
    </logic>

    <filter>
        <name>ILS LOC Needle</name>
        <type>gain</type>
        <gain>1</gain>
        <output>/instrumentation/pfd[0]/ils/loc-needle</output>
        <input>
            <condition>
                <equals>
                    <property>/instrumentation/pfd[0]/ils/source</property>
                    <value>1</value>
                </equals>
            </condition>
            <property>/instrumentation/nav[0]/loc-needle-deflection-norm</property>
        </input>
        <input>
            <condition>
                <equals>
                    <property>/instrumentation/pfd[0]/ils/source</property>
