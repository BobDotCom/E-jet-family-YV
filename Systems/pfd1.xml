            </expression>
        </input>
        <min>-42</min>
        <max>42</max>
        <output>instrumentation/pfd[0]/ias-bug1-diff</output>
    </filter>
    <filter>
        <name>SPEEDBUGDiff2</name>
        <type>gain</type>
        <gain>1.0</gain>
        <input>
            <expression>
                <dif>
                    <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property> 
