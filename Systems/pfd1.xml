        </input>
        <output>instrumentation/pfd[0]/hdg-bug-diff</output>
    </filter>
    <filter>
        <name>ALTBUGDiff</name>
        <type>gain</type>
        <gain>1.0</gain>
        <input>
            <expression>
                <dif>
